    <h2>Latest Uploaded Links</h2>
    <p>Newest links appear first. Older links load automatically.</p>
  </section>

  <section class="links-wrapper">

    <% if (links.length === 0) { %>
      <div class="empty-state">No links available</div>
    <% } %>

    <% links.forEach(link => { %>
      <article class="link-card">
        <div class="link-left">
          <span class="category"><%= link.category %></span>
          <h3><%= link.title %></h3>
        </div>

        <a
          class="visit-btn"
          href="<%= link.url %>"
          target="_blank"
          rel="noopener"
        >
          Visit
        </a>
      </article>
    <% }) %>

  </section>

